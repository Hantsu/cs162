#include <stdio.h>
#include <cstring>
#include <conio.h>
int main(){
    
char password[]="Gosaints1!";
char pass[15];
while(1){
printf("\nEnter password: ");

gets(pass);

if(strcmp(pass,password)==0){
printf("\nWelcome. Password entered correctly.");
break;}

else
printf("\nPassword did not match. Retry...\n");
}

getch();
    return 0;
}
